@model IEnumerable<prjProject.Models.TableNationalParks1081741>

@{
    ViewBag.Title = "City";
}

<h2>City</h2>
<div class="row">
    <div class="col-md-3">
        <p><a href="/Home/City?city=高雄市" class="btn btn-info">高雄市</a></p>
        <p><a href="/Home/City?city=屏東縣" class="btn btn-info">屏東縣</a></p>
        <p><a href="/Home/City?city=南投縣" class="btn btn-info">南投縣</a></p>
        <p><a href="/Home/City?city=臺北市" class="btn btn-info">臺北市</a></p>
        <p><a href="/Home/City?city=花蓮縣" class="btn btn-info">花蓮縣</a></p>
        <p><a href="/Home/City?city=苗栗縣" class="btn btn-info">苗栗縣</a></p>
        <p><a href="/Home/City?city=金門縣" class="btn btn-info">金門縣</a></p>
        <p><a href="/Home/City?city=臺南市" class="btn btn-info">臺南市</a></p>
    </div>
    <div class="col-md-9">
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.名稱)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.縣市)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.地址)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.電話)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.網址)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.資源特色)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.介紹)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.名稱)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.縣市)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.地址)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.電話)
                    </td>
                    <td>
                        <a href="@item.網址">
                            @Html.DisplayFor(modelItem => item.網址)
                        </a>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.資源特色)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.介紹)
                    </td>
                </tr>
            }
        </table>
    </div>
</div>
